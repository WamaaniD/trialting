num1 = float(input("Enter 1st number : "))
op = input("Enter operation to be performed : ")
num2 = float(input("Enter the 2nd number : "))

if op == "+":
    print(num1+num2)
elif op == "-":
    print(num1-num2)
elif op == "*":
    print(num1*num2)
elif op == "/":
    print(num1/num2)
else:
    print("Wrong operation")

